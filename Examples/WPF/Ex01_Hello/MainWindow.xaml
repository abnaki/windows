<Window x:Class="Ex01_Hello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hello" Height="238.8" Width="323.4">
    <StackPanel>
        <Button Content="_Throw Exception" HorizontalAlignment="Left" Margin="19,10,0,0" VerticalAlignment="Top" Width="102" Command="{Binding CmdThrowException}"/>
        <Button Command="{Binding CmdSaveLog}" Content="_Save Logfile" HorizontalAlignment="Left" Margin="19,4.4,0,0" Grid.Row="1" VerticalAlignment="Top" Width="75"/>
        <Button Click="HandleButton" CommandParameter="TestMessage" Content="_Message" HorizontalAlignment="Left" Margin="19,6.8,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75"/>
    </StackPanel>
</Window>
